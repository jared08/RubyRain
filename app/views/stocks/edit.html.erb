<% provide(:title, "Edit stock") %>
<h1>Edit Stock</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@stock) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :symbol, "Symbol" %>
      <%= f.text_field :symbol, class: 'form-control' %>

      <%= f.label :league, "League" %>
      <%= f.text_field :league, class: 'form-control' %>

      <%= f.submit "Save changes", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
