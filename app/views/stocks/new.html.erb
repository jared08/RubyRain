<% provide(:title, 'Add Stock') %>
<h1>Add Stock</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@stock) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :symbol, "Symbol" %>
      <%= f.text_field :symbol %>

      <%= f.label :PlayerID, "Player ID (for API)" %>
      <%= f.text_field :PlayerID %>

      <%= f.label :current_price, "Current Price" %>
      <%= f.number_field :current_price %>

      <%= f.label :sport, "Sport" %>
      <%= f.select :sport, ['Golf']%>

      <%= f.submit "Add stock", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

