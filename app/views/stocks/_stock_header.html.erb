<div class="header">
  <div class="col-sm-2">
    <div id="picture">
      <img src="<%= @stock[:PhotoUrl] %>" alt="@stock.name" />
    </div>
  </div>
  <div class="col-sm-6">
    <div id="header_info">
      <h2> <%= stock.name %> (<%= stock.symbol %>) </h2>
      <h3> <%= '%.2f' % stock.current_price %> </h3>
      <% if stock.daily_change > 0 %>
        <h4 class="green">+<%= '%.2f' % (stock.current_price - stock.open_price) %> (+<%= '%.2f' % (stock.daily_change * 100) %>%) </h4>
      <% elsif stock.daily_change < 0 %>
        <h4 class="red"> <%= '%.2f' % (stock.current_price - stock.open_price) %> (<%= '%.2f' % (stock.daily_change * 100) %>%) </h4>
      <% else %>
        <h4 class="black">0.00 (0.00%)</h4>
      <% end %>
      <h4> as of <%= time.strftime("%I:%M %p") %> </h4> <br><br>
      
      <div class="btn-group" role="group" aria-label="Basic example">
        <button type="button" class="btn btn-secondary">Summary</button>
        <button type="button" class="btn btn-secondary">Earnings and Events</button>
        <button type="button" class="btn btn-secondary">News</button>
      </div>
      <button type="button" class="btn btn-success"><%= link_to 'Buy', new_holding_path({:stock_symbol => stock.symbol, :type => 'buy'}) %></button>
      <button type="button" class="btn btn-danger"><%= link_to 'Sell', new_holding_path({:stock_symbol => stock.symbol, :type => 'sell'}) %></button>
      <button type="button" class="btn btn-success"><%= link_to 'Short', new_holding_path({:stock_symbol => stock.symbol, :type => 'short'}) %></button>
      <button type="button" class="btn btn-danger"><%= link_to 'Cover', new_holding_path({:stock_symbol => stock.symbol, :type => 'cover'}) %></button>
      <% if current_user.admin? %>
        <%= link_to 'Edit', edit_stock_path(stock), class: "btn btn-primary"%>
        <%= link_to 'Delete', stock,  method: :delete, data: { confirm: "You sure?" },  class: "btn btn-primary"%>
      <% end %>
    </div>
  </div>
</div>
