<div class="panel panel-default">
  <div class="panel-heading"><h4>Posts</h4></div>
  <div class="panel-body">
    <% if posts.empty? %>
      <p>no posts..</p>
    <% else %>
      <% posts.each do |post| %>
        <p><%= link_to post[:title], application_show_post_modal_path(post_id: post.id), remote: true %></p>
      <% end %>
    <% end %>
  </div>
</div>

<!-- rendering partials for modals-->
<div id="postModal">
 <%= render 'shared/post_modal' %>
</div>
