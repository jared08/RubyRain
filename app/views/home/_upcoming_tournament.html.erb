<div class="panel panel-default">
  <div class="panel-heading">
    <h4><%= link_to upcoming_tournament[:Name], tournament_path(upcoming_tournament[:id]) %></h4>
    <%= upcoming_tournament[:StartDate] %>
    <%= upcoming_tournament[:EndDate] %>
    <%= upcoming_tournament[:Venue] %>
    <%= upcoming_tournament[:Location] %>
    <%= upcoming_tournament[:Par] %>
    <%= upcoming_tournament[:Yards] %>
    $<%= upcoming_tournament[:Purse] %>
  </div>
  <div class="panel-body">
    <% if upcoming_tournament[:golfers].empty? %>
      <p>no golfer's are playing in this tournament..</p>
    <% else %>
      <table class="table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Projected Rank</th>
            <th>Current Price</th>
            <th>Daily Change</th>
           </tr>
        </thead>
        <tbody>
          <tr <% upcoming_tournament[:golfers].each do |golfer| %> >
            <td><%= link_to golfer[:golfer_stock][:name], golfer[:golfer_stock] %></td>
            <td><%= golfer[:golfer_rank] %></td>
            <td>$<%= golfer[:golfer_stock][:current_price] %></td>
            <% if golfer[:golfer_stock][:daily_change] > 0 %>
              <td class="green"><%= '%.2f' % (golfer[:golfer_stock][:daily_change] * 100) %>%</td>
            <% elsif golfer[:golfer_stock][:daily_change] < 0 %>
              <td class="red"><%= '%.2f' % (golfer[:golfer_stock][:daily_change] * 100) %>%</td>
            <% else %>
              <td class="black"><%= '%.2f' % (golfer[:golfer_stock][:daily_change] * 100) %>%</td>
            <% end %>
          </tr <% end %> >
        </tbody>
      </table>
    <% end %> 
  </div>
</div>
