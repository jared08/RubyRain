<table id="user_table" class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Date Joined</th>
      <th>Account Value</th>
      <th>Follow</th>
     </tr>
  </thead>
  <tbody>
    <tr <% users.each do |user| %> >
      <td><%= link_to user.name, user %></td>
      <td><%= user.created_at %></td>
      <td>$<%= user.account_value %></td>
      <% if user != current_user %>
        <td><%= link_to 'Follow', user, class: "btn btn-primary"%></td>
      <% else %>
        <td>you can't follow yourself..</td>
      <% end %>
    </tr <% end %> >
  </tbody>
</table>

<script>
  $(document).ready(function() {
    $("#user_table").DataTable( {
    } );
} );
</script>

