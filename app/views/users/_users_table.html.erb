<table id="user_table" class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Date Joined</th>
      <th>Account Value</th>
      <th>Follow</th>
     </tr>
  </thead>
  <tbody>
    <tr <% users.each do |user| %> >
      <td><%= link_to user.name, user %></td>
      <td><%= user.created_at %></td>
      <td>$<%= user.account_value %></td>
      <% if user != current_user %>
        <% if @following.include? user %>
          <td><%= link_to 'Unfollow', users_unfollow_user_path({:user_to_unfollow => user}), method: :post, class: "btn btn-primary"%></td>
        <% else %>
          <td><%= link_to 'Follow', users_follow_user_path({:user_to_follow => user}), method: :post, class: "btn btn-primary"%></td>
        <% end %>
      <% else %>
        <td>you can't follow yourself..</td>
      <% end %>
    </tr <% end %> >
  </tbody>
</table>

<script>
  $(document).ready(function() {
    $("#user_table").DataTable( {
    } );
} );
</script>

